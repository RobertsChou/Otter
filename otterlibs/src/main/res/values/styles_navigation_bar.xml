<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NavigationBar -->
    <style name="NavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- NavigationTitle -->
    <style name="NavigationTitle" parent="Wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- NavigationButton -->
    <style name="NavigationButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavigationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- <item name="android:background">@drawable/clickable_item_bg</item> -->
    <!-- NavigationBackButton -->

    <style name="NavigationBackButton" parent="NavigationButton">
        <item name="android:src">@mipmap/nav_back</item>
    </style>

</resources>